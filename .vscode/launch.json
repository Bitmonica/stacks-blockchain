{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: blockstack-core",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/bin/blockstack-core",
            "args": ["start", "--foreground", "--debug"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: integration tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/integration_tests/bin/blockstack-test-scenario",
            "args": ["blockstack_integration_tests.scenarios.name_pre_reg_up"],
            "console": "integratedTerminal",
            "env": {
                "BLOCKSTACK_TEST_START_GAIA": "0",
                "BLOCKSTACK_TEST_START_BROADCASTER": "0",
                "BLOCKSTACK_TEST_CHECK_SUBDOMAIN_REGISTRAR": "0"
            }
        }
    ]
}